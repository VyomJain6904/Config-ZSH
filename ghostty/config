# Font
font-family = JetBrainsMono Nerd Font
font-size = 10
bold-is-bright = true

theme=Dracula

# Transparency
background-opacity = 0.80

# Cursor Style
cursor-style = bar
cursor-color = #f8f8f2

# UI Clean look
gtk-titlebar = false
window-decoration = false
window-padding-x = 6
window-padding-y = 6

# Scroll
scrollback-limit = 100000

# ---------- KEYBINDS ----------

keybind = performable:ctrl+c=copy_to_clipboard
keybind = performable:ctrl+v=paste_from_clipboard
keybind = performable:ctrl+shift+s=new_split:right
keybind = performable:ctrl+shift+d=new_split:down
keybind = performable:ctrl+w=close_tab
